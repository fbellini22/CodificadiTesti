                    <choice>
                        <sic>dormi</sic><corr>dormì</corr>
                    </choice> bene<pc>,</pc> molto
                    <lb xml:id="pag_100_line_5" n="49" facs="#pag100_line5"/>
                    bene dopo quella gelida di 
                    <choice>
                        <sic>natale</sic><corr>Natale</corr>
                    </choice><pc>.</pc>
                    <lb xml:id="pag_100_line_6" n="50" facs="#pag100_line6"/>
