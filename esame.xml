                    <lb xml:id="pag_100_line_14" n="58" facs="#pag100_line14"/>
                    gare il pane e latte che ci diede<pc>.</pc>
                    <lb xml:id="pag_100_line_15" n="59" facs="#pag100_line15"/>
                    Dimenticavo pure la seconda 
                    <lb xml:id="pag_100_line_16" n="60" facs="#pag100_line16"/>
                    parte della storia del formaggio
                    <lb xml:id="pag_100_line_17" n="61" facs="#pag100_line17"/>
