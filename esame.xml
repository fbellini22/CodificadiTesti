                    <lb xml:id="pag_100_line_12" n="56" facs="#pag100_line12"/>
                    vicino<pc>,</pc> prendendoci per 
                    <num  type ="cardinal"  value =" 2 ">due</num> men<pc type="syllabication" rend="light">=</pc>
                    <lb xml:id="pag_100_line_13" n="57" facs="#pag100_line13"/>
