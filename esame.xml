                    <lb xml:id="pag_100_line_2" n="46" facs="#pag100_line2"/>
                    sia necessari e pensavo che siamo 
                    <lb xml:id="pag_100_line_3" n="47" facs="#pag100_line3"/>
                    molto migliori degli altri<pc>,</pc> notte
                    <lb xml:id="pag_100_line_4" n="48" facs="#pag100_line4"/>
